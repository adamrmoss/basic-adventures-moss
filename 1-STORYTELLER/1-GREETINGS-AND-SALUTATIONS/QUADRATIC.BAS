100 REM --- QUOTIENT-REMAINDER ---
110 REM -- SETUP --
120 PRINT "LET'S SOLVE THE QUADRATIC EQUATION:"
130 PRINT "AX^2 + BX + C = 0": PRINT
140 INPUT "A";A
150 INPUT "B";B
160 INPUT "C";C

170 REM -- DISCRIMINANT --
180 LET D=B^2-(4*A*C)
190 PRINT "DISCRIMINANT =";D

200 REM -- SOLUTIONS --
210 IF D>=0 THEN GOTO 250
220 REM - D<0 -
230 PRINT "NO SOLUTIONS!"
240 END
250 IF D>0 THEN GOTO 300
260 REM - D=0 -
270 LET X=-B/(2*A)
280 PRINT "ONE SOLUTION:";X
290 END
300 LET X1=(-B+SQR(D))/(2*A)
310 LET X2=(-B-SQR(D))/(2*A)
320 PRINT "TWO SOLUTIONS: ";X1;" AND";X2
330 END
