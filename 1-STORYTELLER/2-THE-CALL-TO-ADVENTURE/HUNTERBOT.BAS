100 REM --- HUNTERBOT ---
110 PSGINIT
120 SCREEN 1

130 REM -- INTRO --
140 PRINT "YOU'RE BEING CHASED BY A HUNTERBOT."
150 PSGPLAY 0, "O3 L16 AB L2 > C L4 < BG L2 C"
160 PRINT
170 PRINT "TWO ESCAPE ROUTES ARE AVAILABLE.  CHOOSE WISELY."
180 PRINT "TAKE THE 'ALLEYWAY' OR ENTER THE SHOPPING 'MALL'";
190 INPUT C$
200 IF C$ = "ALLEYWAY" THEN GOTO 240
210 IF C$ = "MALL" THEN GOTO 350
220 PRINT "PLEASE CHOOSE EITHER 'ALLEYWAY' OR 'MALL'"
230 GOTO 190

240 REM -- ALLEYWAY --
250 PRINT
260 PRINT "YOU DASH INTO THE DARK ALLEYWAY."
270 GOSUB 1280
280 PRINT "DEAD END AHEAD!"
290 PRINT "WILL YOU 'HIDE' IN A DUMPSTER OR PICK UP A PIPE AND 'FIGHT'";
300 INPUT C$
310 IF C$ = "HIDE" THEN GOTO 460
320 IF C$ = "FIGHT" THEN GOTO 510
330 PRINT "PLEASE CHOOSE EITHER 'HIDE' OR 'FIGHT'"
340 GOTO 300

350 REM -- SHOPPING MALL --
360 PRINT
370 PRINT "YOU RUSH INTO THE SHOPPING MALL."
380 GOSUB 1280
390 PRINT "LOUD CROWDS OFFER COVER.  WHERE DO YOU GO?"
400 PRINT "DO YOU HEAD FOR THE 'ARCADE' OR RUN UP THE 'ESCALATOR'";
410 INPUT C$
420 IF C$ = "ARCADE" THEN GOTO 620
430 IF C$ = "ESCALATOR" THEN GOTO 680
440 PRINT "PLEASE CHOOSE EITHER 'ARCADE' OR 'ESCALATOR'"
450 GOTO 410

460 REM -- HIDE --
470 PRINT
480 PRINT "YOU HIDE IN THE DUMPSTER.  THE HUNTERBOT PASSES BY."
490 PRINT "YOU'RE SAFE FOR NOW.  GOOD JOB!"
500 GOTO 1200

510 REM -- FIGHT --
520 PRINT
530 PRINT "YOU GRAB THE PIPE AND STAND YOUR GROUND."
540 GOSUB 1280
550 PRINT "THE HUNTERBOT ATTACKS.  CAN YOU OVERCOME IT?"
560 PRINT "WILL YOU STRIKE AT ITS 'HEAD' OR TRY TO 'DISARM' IT";
570 INPUT C$
580 IF C$ = "HEAD" THEN GOTO 790
590 IF C$ = "DISARM" THEN GOTO 840
600 PRINT "PLEASE CHOOSE EITHER 'HEAD' OR 'DISARM'"
610 GOTO 570

620 REM -- ARCADE --
630 PRINT
640 PRINT "YOU ENTER THE ARCADE AND START PLAYING AFTERBURNER."
650 PRINT "THE HUNTERBOT LOSES YOU IN THE SEA OF PEOPLE."
660 PRINT "YOU HAVE ESCAPED THE HUNTERBOT \XC3 FOR NOW!"
670 GOTO 1200

680 REM -- ESCALATOR --
690 PRINT
700 PRINT "YOU RUN UP THE ESCALATOR, HOPING TO LOSE THE HUNTERBOT."
710 GOSUB 1280
720 PRINT "AT THE TOP, YOU FIND A ROOFTOP EXIT.  DARE YOU RISK IT?"
730 PRINT "DO YOU 'JUMP' TO THE ADJACENT ROOF OR GO 'BACK' INTO THE MALL";
740 INPUT C$
750 IF C$ = "JUMP" THEN GOTO 900
760 IF C$ = "BACK" THEN GOTO 1010
770 PRINT "PLEASE CHOOSE EITHER 'JUMP' OR 'BACK'"
780 GOTO 740

790 REM -- HEAD --
800 PRINT
810 PRINT "YOU STRIKE THE HUNTERBOT'S HEAD AND DISABLE IT!"
820 PRINT "VICTORY!"
830 GOTO 1200

840 REM -- DISARM --
850 PRINT
860 PRINT "YOU TRY TO DISABLE THE HUNTERBOT BUT FAIL."
870 PRINT "IT OVERPOWERS YOU AND PINS YOU DOWN."
880 PRINT "THE HUNTERBOT ELBOWS YOU IN THE FACE TO DEATH."
890 GOTO 1240

900 REM -- JUMP --
910 PRINT
920 PRINT "YOU JUMP TO THE ADJACENT ROOF AND LAND SAFELY."
930 GOSUB 1280
940 PRINT "YOU FIND YOURSELF IN A CONSTRUCTION SITE."
950 PRINT "DO YOU 'HIDE' AMONG THE STRUCTURES OR FIND SOMETHING TO 'THROW'";
960 INPUT C$
970 IF C$ = "HIDE" THEN GOTO 1070
980 IF C$ = "THROW" THEN GOTO 1130
990 PRINT "PLEASE CHOOSE EITHER 'HIDE' OR 'THROW'"
1000 GOTO 960

1010 REM -- BACK --
1020 PRINT
1030 PRINT "YOU GO BACK INTO THE MALL, ";
1040 PRINT "AND THE HUNTERBOT GRABS YOU BY THE THROAT."
1050 PRINT "HE CRUSHES YOUR TRACHEA."
1060 GOTO 1240

1070 REM -- HIDE --
1080 PRINT
1090 PRINT "YOU HIDE AMONG THE STRUCTURES AND STAY QUIET."
1100 PRINT "THE HUNTERBOT PASSES BY, UNAWARE OF YOUR LOCATION."
1110 PRINT "YOU'VE OUTSMARTED IT.  WELL DONE!"
1120 GOTO 1200

1130 REM -- THROW --
1140 PRINT
1150 PRINT "YOU FIND A HEAVY OBJECT AND THROW IT AT THE HUNTERBOT."
1160 PRINT "YOU MANAGE TO TEMPORARILY DISABLE IT."
1170 GOSUB 1280
1180 PRINT "BUT IT'S NOT DOWN FOR LONG.  YOU MUST KEEP RUNNING."
1190 GOTO 160

1200 REM -- SUCCESS --
1210 PSGPLAY 0, "O3 L16 AB L2 > C L4 < BG L4 > E.D."
1220 PRINT "THE END"
1230 END

1240 REM -- FAILURE
1250 PSGPLAY 0, "L4 GF#F L2 E"
1260 PRINT "THE END"
1270 END

1280 REM -- SUB -- NEXT CHOICE --
1290 PSGPLAY 0, "L12 O3 CCC L2 F"
1300 RETURN
