100 REM --- SIREN ---
110 PRINT "PRESS ANY KEY TO HALT SIREN..."

120 REM -- PITCH UP --
130 FOR T = 110 TO 440
140 : PSGFREQ 0, T
150 : GET C$
160 : IF C$ <> "" THEN GOTO 250
170 NEXT T

180 REM -- PITCH DOWN --
190 FOR T = 440 TO 110 STEP -1
200 : PSGFREQ 0, T
210 : GET C$
220 : IF C$ <> "" THEN GOTO 250
230 NEXT T
240 GOTO 120

250 REM -- SILENCE --
260 PSGFREQ 0, 0
