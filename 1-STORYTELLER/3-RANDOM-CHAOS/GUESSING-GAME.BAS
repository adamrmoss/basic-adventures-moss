100 REM --- GUESSING GAME ---
110 REM -- SETUP --
120 SCREEN 1
130 PRINT "LET'S PLAY GUESSING GAME"
140 INPUT "RANGE"; R
150 LET X=INT(RND(0)*R)+1
160 LET P=-INT(-(LOG(R)/LOG(2)))
170 PRINT "IT SHOULD TAKE YOU";P;"GUESSES, LET'S GO!"

180 REM -- PLAYER GUESSES --
190 LET G=1
200 PRINT "GUESS #";G
210 INPUT Y
220 IF Y=X THEN GOTO 310
230 IF Y<X THEN PRINT "TOO LOW!"
240 IF Y>X THEN PRINT "TOO HIGH!"
250 REM - BAD GUESS -
260 G=G+1
270 PSGCHORD 0, "O3 DG#"
280 PSGPLAY 2, "L4 R"
290 PSGCHORD 0, "RRR"
300 GOTO 200

310 REM -- SUCCESS --
320 PRINT "YOU GUESSED CORRECTLY AFTER";G;"GUESSES"
330 PSGCHORD 0, "C# A"
340 PSGPLAY 2, "L2 R"
350 PSGCHORD 0, "RRR"
