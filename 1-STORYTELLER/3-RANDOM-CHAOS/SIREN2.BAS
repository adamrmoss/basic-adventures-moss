100 REM --- SIN-LOG SIREN ---
110 REM -- SETUP ---
120 PRINT "PRESS ANY KEY TO HALT SIREN..."

130 REM -- PITCH --
140 FOR T=0 TO 2*\XFF STEP .08
150 : LET E=SIN(T)+1
160 : LET P=110*2^E
170 : PSGFREQ 0, P
180 : GET C$
190 : IF C$ <> "" THEN GOTO 220
200 NEXT T
210 GOTO 140

220 REM -- CLEANUP ---
230 REM - SILENCE -
240 PSGFREQ 0, 0
