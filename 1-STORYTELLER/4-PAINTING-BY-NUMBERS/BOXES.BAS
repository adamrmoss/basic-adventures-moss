100 REM --- BOXES ---
110 REM -- SETUP --
120 CLS: SCREEN 128
130 COLOR 1: CLS
140 LOCATE 29, 6
150 PRINT "**** PRESS ANY KEY TO END ****"

160 REM -- LOOP START --
170 LET X1=RND(1)*320
180 LET X2=RND(1)*320
190 LET Y1=RND(1)*240
200 LET Y2=RND(1)*240
210 LET C=RND(1)*256
220 RECT X1, Y1, X2, Y2, C
230 LET V=INT(RND(1)*16)+32
240 LET O=INT(RND(1)*3)+3
250 LET N=INT(RND(1)*12)+1
260 PSGVOL 0, V
270 PSGNOTE 0, O*16+N
280 LET A=ABS((X1-X2)*(Y1-Y2))
290 LET L=INT(A/3500)
300 SLEEP L
310 GET K$

320 REM -- CLEANUP ---
330 IF K$="" THEN GOTO 160
340 PSGNOTE 0, 0
350 SCREEN 1
